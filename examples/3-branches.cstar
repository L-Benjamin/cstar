System main() {
    let x = 42;

    /* If statements may be used to branch the program's flow. */
    if (x / 2 == 8) {
        Println("x halved is 8");
    } else {
        Println("x halved is not 8, it is: ", x / 2);
    }

    /* The else branch isn't necessary. */
    if (x % 2 == 0) {
        Println("x is even");
    }
}

Init [main];
Run [];